#!/usr/bin/env bash
# Init script to manage the manage_my_process daemon

# Get the path to the manage_my_process script
SCRIPT_DIR="$(dirname "$0")"
MANAGE_SCRIPT="$SCRIPT_DIR/manage_my_process"

case "$1" in
    start)
        # Start the process
        "$MANAGE_SCRIPT" &
        PID=$!
        echo "$PID" > /var/run/my_process.pid
        echo "manage_my_process started"
        ;;
    stop)
        # Stop the process
        if [ -f /var/run/my_process.pid ]; then
            PID=$(cat /var/run/my_process.pid)
            kill "$PID" 2>/dev/null
            rm -f /var/run/my_process.pid
            echo "manage_my_process stopped"
        else
            echo "PID file not found. Is the process running?"
        fi
        ;;
    restart)
        # Stop if running
        if [ -f /var/run/my_process.pid ]; then
            PID=$(cat /var/run/my_process.pid)
            kill "$PID" 2>/dev/null
            rm -f /var/run/my_process.pid
            sleep 1
        fi
        
        # Start again
        "$MANAGE_SCRIPT" &
        PID=$!
        echo "$PID" > /var/run/my_process.pid
        echo "manage_my_process restarted"
        ;;
    *)
        # Invalid argument
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac

exit 0
